<RootWidget>:
	ScreenManager:
		id: sm

		Screen:
			name: 'screen1'
			BoxLayout:
				pos_hint: {'x': .05, 'y': .05}
				size_hint: (.9, .9)
				orientation: 'vertical'
				StackLayout:
					size_hint_y: None
					height: 100
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.29, .45)
						font_size: 0.35 * self.height
						text: 'Select Input File/Folder'
						on_release: root.showInputFileFolderDialog()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.29, .45)
						font_size: 0.35 * self.height
						text: 'Select Output File/Folder'
						on_release: root.showOutputFileFolderDialog()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.21, .45)
						font_size: 0.35 * self.height
						text: 'Settings [F1]'
						on_release: app.open_settings()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.21, .45)
						font_size: 0.35 * self.height
						text: 'About'
						on_release: root.showAboutDialog()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.29, .45)
						font_size: 0.35 * self.height
						text: 'Compress NSP/XCI'
						on_release: root.Compress()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.29, .45)
						font_size: 0.35 * self.height
						text: 'Decompress NSZ/XCZ'
						on_release: root.Decompress()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.105, .45)
						font_size: 0.35 * self.height
						text: 'Verify'
						on_release: root.Verify()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.105, .45)
						font_size: 0.35 * self.height
						text: 'Info'
						on_release: root.Info()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.105, .45)
						font_size: 0.35 * self.height
						text: 'Titlekey'
						on_release: root.Titlekeys()
					Button:
						background_color: 0, .3, .4, .85
						size_hint: (.105, .45)
						font_size: 0.35 * self.height
						text: 'Extract'
						on_release: root.Extract()


				BoxLayout:
					id: inFilesLayout
					canvas.before:
						Color:
							rgba: (0, 0, 0, 0.4)
						Rectangle:
							pos: self.pos
							size: self.size
							
		Screen:
			name: 'screen2'
		Screen:
			name: 'screen3'
