<SelectableLabel>:
	# Draw a background to indicate selection
	canvas.before:
		Color:
			rgba: (0.0, 0.9, 0.1, 0.3) if self.selected else (0, 0, 0, 0)
		Rectangle:
			pos: self.pos
			size: self.size
	cover_source: ''
	filename_text: ''
	titleid: ''
	version: ''
	filesize_text: '0 KB'
	pos: self.pos
	size: self.size
	on_size: self.height = self.ids.id_filename.height #Booth required due to the way how Kivy resizes
	Label:
		id: id_filename
		valign: "top"
		halign: "left"
		pos: 0, 0
		size_hint: None, None
		text_size: self.width, None
		font_size: 12
		text: root.filename_text
		size: root.width-300, self.texture_size[1]
		on_size: root.height = self.height #Booth required due to the way how Kivy resizes
		padding: [3, 2]
		canvas.before:
			Color:
				rgba: (1.0, 0.0, 0.0, 0.1)
			Rectangle:
				pos: self.pos
				size: self.size
	Label:
		id: id_titleid
		valign: "top"
		halign: "right"
		pos: root.width-300, 0
		size_hint: None, None
		text_size: self.width, root.height
		font_size: 12
		text: root.titleid
		size: 140, self.texture_size[1]
		padding: [3, 2]
		canvas.before:
			Color:
				rgba: (1.0, 1.0, 0.0, 0.1)
			Rectangle:
				pos: self.pos
				size: self.size
	Label:
		id: id_version
		valign: "top"
		halign: "right"
		pos: root.width-160, 0
		size_hint: None, None
		text_size: self.width, root.height
		font_size: 12
		text: root.version
		size: 80, self.texture_size[1]
		padding: [3, 2]
		canvas.before:
			Color:
				rgba: (0.0, 1.0, 1.0, 0.1)
			Rectangle:
				pos: self.pos
				size: self.size
	Label:
		id: id_size
		valign: "top"
		halign: "right"
		pos: root.width-80, 0
		size_hint: None, None
		text_size: self.width, root.height
		font_size: 12
		text: root.filesize_text
		size: 80, self.texture_size[1]
		padding: [3, 2]
		canvas.before:
			Color:
				rgba: (0.0, 0.0, 1.0, 0.1)
			Rectangle:
				pos: self.pos
				size: self.size

<RV>:
	scroll_y: 0.5
	viewclass: 'SelectableLabel'
	SelectableRecycleBoxLayout:
		id: selectableRecycleBoxLayout
		default_size: None, dp(40)
		default_size_hint: 0.99, None
		size_hint_y: None
		height: self.minimum_height
		orientation: 'vertical'
		multiselect: True
		touch_multiselect: True


<GameList>:
	FloatLayout:
		id: DragAndDropFloatLayout
		Label:
			size_hint: 1, 1
			pos_hint: {"x": 0, "y": 0}
			halign: "center"
			valign: "center"
			id: DragAndDropLabel
			text_size: self.size
			font_size: 0.03 * self.width
			text: "Drag & Drop NSP/NSZ/XCI/XCZ/NCZ files/folders here"
